@{
    ViewBag.Title = "Basic Information";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@using Model;
@model UserInfo

<div class="panel panel-default">
    <div class="panel-heading">个人信息</div>
    <div class="panel-body">
        <div class="row">
            <div class="form-group form-group-sm col-sm-6">
                <label class="col-sm-4 control-label">姓名：</label>
                <div class="col-sm-8">
                    <input type="text" id="name" name="name" class="form-control input-sm" value=@Model.name readonly />
                </div>
            </div>
            
        </div>
        <div class="row">

            <div class="form-group form-group-sm col-sm-6">
                <label class="col-sm-4 control-label">邮箱：</label>
                <div class="col-sm-8">
                    <input type="text" id="email" name="email" class="form-control input-sm" value=@Model.email readonly />
                </div>
            </div>
        </div>
    </div>

</div>


